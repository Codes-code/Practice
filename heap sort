class Heapsort
{
public static int[] build_max_heap(int[] A, int a)
{
    int lc=2a;
    int rc=2a+1;
    
    if(A[lc]<A[rc]){
        int temp=A[rc];
        A[rc]=A[lc];
        A[lc]=temp;
    }
    
