        if(A[a]<A[rc]){
            int temp1=A[lc];
            A[lc]=A[rc];
            A[rc]=A[a];
            A[a]=temp1;
        }
        else{int temp3=A[lc];
            A[lc]=A[a];
            A[a]=A[lc];
        }
    }
    
    return A[];
}

public static void main(){
    
    int[] arr=new int[]{46,4,12,13,15,2,3,9,8};
    int parents=(arr.length)/2;
    for(int i=parents; i>0; i--){
        A[]=build_max_heap(A,i);
    }
    
